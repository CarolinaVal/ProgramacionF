#include <stdio.h>
 
int main()
{
 printf ("Hola! Tratare de adivinar un numero\n");
 printf ("Piensa en un numero entre 1 y 10\n");
sleep(5);
 printf ("Ahora multiplicalo por 9\n");
sleep(5);
 printf ("Si el numero tiene 2 digitos, sumalos entre si: Ej.36 -> 3+6=9. Si tu número tiene un solo dígito, súmale 0.\n");
sleep(5);
 printf ("Al número resultante súmale 4.\n");
sleep(10);
 printf ("Muy bien. El resultado es 13 :) \n");

}
